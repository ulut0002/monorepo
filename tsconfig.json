{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "emitDeclarationOnly": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "paths": {
      "@/*": ["*"],
      "@shared/*": ["packages/shared/src/*"]
    }
  },
  "files": [],
  "references": [
    { "path": "packages/shared" },

    { "path": "apps/frontend" },
    { "path": "apps/backend" }
  ]
}
